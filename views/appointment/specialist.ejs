<%- include("../partials/header") %> <%- include("../partials/navbar") %><%-
include("../partials/messages") %>

<!-- component -->

<section class="text-gray-600">
  <div class="container px-3 py-3 mx-auto">
    <div class="flex flex-wrap w-full mb-8">
      <div class="w-full mb-6 lg:mb-0">
        <h1
          class="sm:text-4xl text-5xl font-bold font-medium title-font mb-2 text-gray-900"
        >
          All Specialities
        </h1>
        <div class="h-1 w-20 bg-indigo-500 rounded"></div>
      </div>
    </div>

    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4 gap-4 container px-3 py-3 mx-auto"
    >
      <% if (specialities_list) { %> <%
      specialities_list.forEach(function(eachspecialist){ %>
      <div
        class="flex flex-col items-center justify-center bg-white p-4 shadow rounded-lg"
      >
        <a href="/appointment/single-specialist/<%= eachspecialist.spec_id %>">
          <div
            class="inline-flex shadow-lg border border-gray-200 rounded-full overflow-hidden h-40 w-40"
          >
            <img
              src="<%= eachspecialist.image %>"
              alt=""
              class="h-full w-full"
            />
          </div>
        </a>
        <a
          href="/appointment/single-specialist/<%= eachspecialist.spec_id %>"
          class="mt-4 font-bold text-xl"
          ><%= eachspecialist.name %></a
        >
        <!-- <h6 class="mt-2 text-sm font-medium">Founder</h6> -->
      </div>
      <% }); %> <%}%>
    </div>
  </div>
</section>

<%if (specialities_list.length == 0){ %>

<!-- component -->
<div class="mt-20">
  <div class="bg-white p-6 md:mx-auto">
    <div class="text-center">
      <h3 class="md:text-2xl text-base text-gray-900 font-semibold text-center">
        Nothing is on Specialities!
      </h3>
      <p class="text-gray-600 my-2">Let admin to add some Specialities.</p>
      <div class="py-10 text-center"></div>
    </div>
  </div>
</div>

<%}%> <%- include("../partials/footNav") %> <%- include("../partials/footer") %>
