<div class="container mx-auto">
  <div class="flex justify-center px-6 my-12">
    <div class="w-full xl:w-3/4 lg:w-11/12 flex">
      <div
        class="
          w-full
          lg:w-7/12
          bg-white
          p-5
          mx-auto
          rounded-lg
          lg:rounded-l-none
        "
      >
        <h3 class="pt-4 text-2xl text-center">Update User</h3>
        <form
          class="px-8 pt-6 pb-8 mb-4 bg-white rounded"
          action="/admin/update-user/<%=users.id%>"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="mb-4 md:flex md:justify-between">
            <div class="mb-4 md:mr-2 md:mb-0">
              <label class="block mb-2 text-sm font-bold text-gray-700">
                Full Name
              </label>
              <input
                class="
                  w-full
                  px-3
                  py-2
                  text-sm
                  leading-tight
                  text-gray-700
                  border
                  rounded
                  shadow
                  appearance-none
                  focus:outline-none focus:shadow-outline
                "
                type="text"
                name="fullname"
                value="<%=users.fullname%>"
                required
              />
            </div>
            <div class="md:ml-2">
              <label class="block mb-2 text-sm font-bold text-gray-700">
                Email
              </label>
              <input
                class="
                  w-full
                  px-3
                  py-2
                  text-sm
                  leading-tight
                  text-gray-700
                  border
                  rounded
                  shadow
                  appearance-none
                  focus:outline-none focus:shadow-outline
                "
                type="email"
                name="email"
                value="<%=users.email%>"
                required
              />
            </div>
          </div>

          <div class="mb-4 md:flex md:justify-between">
            <div class="md:ml-2">
                <label class="block mb-2 text-sm font-bold text-gray-700">
                  Phone Number
                </label>
                <input
                  class="
                    w-full
                    px-3
                    py-2
                    text-sm
                    leading-tight
                    text-gray-700
                    border
                    rounded
                    shadow
                    appearance-none
                    focus:outline-none focus:shadow-outline
                  "
                  type="number"
                  name="phonenumber"
                  value="<%=users.phonenumber%>"
                  required
                />
              </div>
            <div class="md:ml-2">
              <label class="block mb-2 text-sm font-bold text-gray-700">
                Address
              </label>
              <input
                class="
                  w-full
                  px-3
                  py-2
                  text-sm
                  leading-tight
                  text-gray-700
                  border
                  rounded
                  shadow
                  appearance-none
                  focus:outline-none focus:shadow-outline
                "
                type="text"
                name="address"
                value="<%=users.address%>"
                required
              />
            </div>
          </div>
          <div class="mb-4 md:flex md:justify-between">
            <div class="mb-4 md:mr-2 md:mb-0">
              <label class="block mb-2 text-sm font-bold text-gray-700">
                Avatar
              </label>
              <input
                class="
                  w-full
                  px-3
                  py-2
                  text-sm
                  leading-tight
                  text-gray-700
                  border
                  rounded
                  shadow
                  appearance-none
                  focus:outline-none focus:shadow-outline
                "
                type="file"
                name="userimage"
                accept="image/*"
                required
              />
            </div>
            <div class="md:ml-2">
              <label class="block mb-2 text-sm font-bold text-gray-700">
                User Type
              </label>
              <input
                class="
                  w-full
                  px-3
                  py-2
                  text-sm
                  leading-tight
                  text-gray-700
                  border
                  rounded
                  shadow
                  appearance-none
                  focus:outline-none focus:shadow-outline
                "
                type="text"
                name="usertype"
                value="<%=users.user_type%>"
                required
              />
            </div>
          </div>
          <div class="mb-6 text-center">
            <button
              class="
                w-full
                px-4
                py-2
                font-bold
                text-white
                bg-blue-500
                rounded-full
                hover:bg-blue-700
                focus:outline-none focus:shadow-outline
              "
              type="submit"
            >
              Update User
            </button>
          </div>
          <hr class="mb-6 border-t" />
        </form>
      </div>
    </div>
  </div>
</div>
<%- include("../partials/footer") %>
