<%- include('../partials/header')%> <%- include("../partials/messages") %>
<nav class="text-black font-bold mx-5 mb-7 my-4" aria-label="Breadcrumb">
  <ol class="list-none p-0 inline-flex">
    <li class="flex items-center">
      <a href="/admin">Dashboard</a>
      <svg
        class="fill-current w-3 h-3 mx-3"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 320 512"
      >
        <path
          d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z"
        />
      </svg>
    </li>
    <li>
      <a
        href="/admin/all-specialities"
        class="text-gray-500"
        aria-current="page"
        >All Specialities</a
      >
    </li>
  </ol>
</nav>
<a
  href="/admin/add-specialities"
  class="ml-10 mt-3 text-md font-bold text-white bg-green-700 rounded-full px-5 py-2 hover:bg-green-800"
  ><i class="fas fa-plus-circle"></i> Add Specialities</a
><a
  href="/admin/add-doctors"
  class="ml-5 mt-3 text-md font-bold text-white bg-indigo-700 rounded-full px-5 py-2 hover:bg-indigo-800"
  ><i class="fas fa-plus-circle"></i> Add Doctors</a
>
<div class="container mx-auto px-6 py-3">
  <div class="flex flex-col">
    <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
      <div
        class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200"
      >
        <table class="min-w-full">
          <thead>
            <tr>
              <th
                class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider"
              >
                Id
              </th>
              <th
                class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider"
              >
                Name
              </th>
              <th
                class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider"
              >
                Action
              </th>
            </tr>
          </thead>

          <tbody class="bg-white">
            <% if (specialities_list) { %> <%
            specialities_list.forEach(function(eachspecialist){ %>
            <tr>
              <td
                class="px-6 py-4 whitespace-no-wrap border-b border-gray-200 text-sm leading-5 text-gray-500"
              >
                <%=eachspecialist.spec_id%>
              </td>
              <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-10 w-10">
                    <img
                      class="h-10 w-10 rounded-full"
                      src="<%=eachspecialist.image%>"
                      alt=""
                    />
                  </div>

                  <div class="ml-4">
                    <div class="text-sm leading-5 font-medium text-gray-900">
                      <%=eachspecialist.name%>
                    </div>
                  </div>
                </div>
              </td>

              <td
                class="px-6 py-4 whitespace-no-wrap border-b border-gray-200 text-sm leading-5 font-medium"
              >
                <form
                  action="/admin/delete-specialities/<%=eachspecialist.spec_id%>"
                  method="post"
                >
                  <button type="submit" class="text-red-600 hover:text-red-900">
                    <i class="fas fa-trash-alt"></i>
                  </button>
                </form>
              </td>
            </tr>
            <% }); %> <%}%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer')%>
