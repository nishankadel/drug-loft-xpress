<!-- add doctors  -->
<div class="container mx-auto">
  <div class="flex justify-center px-6">
    <div class="w-full xl:w-3/4 lg:w-11/12 flex">
      <div
        class="w-full lg:w-7/12 bg-white p-5 mx-auto rounded-lg lg:rounded-l-none"
      >
        <h3 class="text-2xl text-center">Add Doctors</h3>
        <form
          class="px-8 pt-6 pb-8 mb-1 bg-white rounded"
          action="/admin/add-doctors"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="mb-4 md:flex md:justify-between">
            <div class="md:ml-2">
              <label class="block mb-2 text-sm font-bold text-gray-700">
                Doctor Name
              </label>
              <input
                class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                type="text"
                name="doctorname"
                required
              />
            </div>
            <div class="mb-4 md:mr-2 md:mb-0">
              <label class="block mb-2 text-sm font-bold text-gray-700">
                Spec Id
              </label>
              <input
                class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                type="number"
                name="specid"
                required
              />
            </div>
          </div>
          <div class="mb-4 md:flex md:justify-between">
            <div class="md:ml-2">
              <label class="block mb-2 text-sm font-bold text-gray-700">
                Unit
              </label>
              <input
                class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                type="text"
                name="unit"
                required
              />
            </div>
            <div class="mb-4 md:mr-2 md:mb-0">
              <label class="block mb-2 text-sm font-bold text-gray-700">
                Days
              </label>
              <input
                class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                type="text"
                name="days"
                required
              />
            </div>
          </div>
          <div class="mb-6 text-center">
            <label class="block mb-2 text-sm font-bold text-gray-700">
              Doctor Image
            </label>
            <input
              class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
              type="file"
              name="doctorimage"
              accept="image/*"
              required
            />
          </div>
          <div class="mb-6 text-center">
            <button
              class="w-full px-4 py-2 font-bold text-white bg-blue-500 rounded-full hover:bg-blue-700 focus:outline-none focus:shadow-outline"
              type="submit"
            >
              Add Doctors
            </button>
          </div>

          <hr class="mb-6 border-t" />
        </form>
      </div>
    </div>
  </div>
</div>

<!-- all doctors list  -->
<div class="container mx-auto px-6">
  <div class="flex flex-col">
    <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
      <div
        class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200"
      >
        <table class="min-w-full">
          <thead>
            <tr>
              <th
                class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider"
              >
                Id
              </th>
              <th
                class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider"
              >
                Name
              </th>
              <th
                class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider"
              >
                Days
              </th>
              <th
                class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider"
              >
                unit
              </th>
              <th
                class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider"
              >
                Spec_id
              </th>
              <th
                class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider"
              >
                Action
              </th>
            </tr>
          </thead>

          <tbody class="bg-white">
            <% if (doc_list) { %> <% doc_list.forEach(function(eachdoctor){ %>
            <tr>
              <td
                class="px-6 py-4 whitespace-no-wrap border-b border-gray-200 text-sm leading-5 text-gray-500"
              >
                <%= eachdoctor.doc_id %>
              </td>
              <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-10 w-10">
                    <img
                      class="h-10 w-10 rounded-full"
                      src="<%= eachdoctor.image %>"
                      alt=""
                    />
                  </div>

                  <div class="ml-4">
                    <div class="text-sm leading-5 font-medium text-gray-900">
                      <%= eachdoctor.name %>
                    </div>
                  </div>
                </div>
              </td>
              <td
                class="px-6 py-4 whitespace-no-wrap border-b border-gray-200 text-sm leading-5 text-gray-500"
              >
                <%= eachdoctor.days %>
              </td>
              <td
                class="px-6 py-4 whitespace-no-wrap border-b border-gray-200 text-sm leading-5 text-gray-500"
              >
                <%= eachdoctor.unit %>
              </td>
              <td
                class="px-6 py-4 whitespace-no-wrap border-b border-gray-200 text-sm leading-5 text-gray-500"
              >
                <%= eachdoctor.spec_id %>
              </td>

              <td
                class="px-6 py-4 whitespace-no-wrap border-b border-gray-200 text-sm leading-5 font-medium"
              >
                <form action="/admin/delete-doctors" method="post">
                  <input
                    type="hidden"
                    value="<%= eachdoctor.doc_id %>"
                    name="doc_id"
                  />
                  <button type="submit" class="text-red-600 hover:text-red-900">
                    <i class="fas fa-trash-alt"></i>
                  </button>
                </form>
              </td>
            </tr>
            <% }); %> <%}%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
