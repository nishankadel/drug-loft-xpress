<%- include("../partials/header") %> <%- include("../partials/messages") %> <%
if (user) {%>
<!-- component -->
<nav class="text-black font-bold mx-5 my-4" aria-label="Breadcrumb">
  <ol class="list-none p-0 inline-flex">
    <li class="flex items-center">
      <a href="/admin">Dashboard</a>
      <svg
        class="fill-current w-3 h-3 mx-3"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 320 512"
      >
        <path
          d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z"
        />
      </svg>
    </li>
    <li>
      <a href="/admin/profile" class="text-gray-500" aria-current="page"
        >Admin Profile</a
      >
    </li>
  </ol>
</nav>
<div class="h-full mt-5">
  <div class="border-b-2 block md:flex">
    <div class="w-full md:w-2/5 p-4 sm:p-6 lg:p-8 bg-white shadow-md">
      <div class="flex justify-between">
        <span class="text-xl font-semibold block"
          ><%=user.user_type %> Profile</span
        >
      </div>

      <div class="w-full p-8 mx-2 flex justify-center">
        <img
          id="showImage"
          class="items-center border"
          style="border-radius: 50%; width: 200px; height: 200px"
          src="<%= user.avatar %>"
          alt="user_pic"
        />
      </div>
    </div>

    <div class="w-full md:w-3/5 p-8 bg-white lg:ml-4 shadow-md">
      <div class="rounded shadow p-6">
        <div class="pb-6">
          <label for="name" class="font-semibold text-gray-700 block pb-1"
            >Name</label
          >
          <div class="flex">
            <input
              disabled
              id="username"
              class="border-1 rounded-r px-4 py-2 w-full"
              type="text"
              value="<%= user.fullname %>"
            />
          </div>
        </div>
        <div class="pb-4">
          <label for="about" class="font-semibold text-gray-700 block pb-1"
            >Email</label
          >
          <input
            disabled
            id="email"
            class="border-1 rounded-r px-4 py-2 w-full"
            type="email"
            value="<%= user.email %>"
          />
        </div>
        <div class="pb-6">
          <label for="name" class="font-semibold text-gray-700 block pb-1"
            >Phone Number</label
          >
          <div class="flex">
            <input
              disabled
              id="username"
              class="border-1 rounded-r px-4 py-2 w-full"
              type="text"
              value="<%= user.phonenumber %>"
            />
          </div>
        </div>

        <div class="pb-6">
          <label for="name" class="font-semibold text-gray-700 block pb-1"
            >Address</label
          >
          <div class="flex">
            <input
              disabled
              id="username"
              class="border-1 rounded-r px-4 py-2 w-full"
              type="text"
              value="<%= user.address %>"
            />
          </div>
        </div>

        <div class="pb-6">
          <label for="name" class="font-semibold text-gray-700 block pb-1"
            >Profile Created At</label
          >
          <div class="flex">
            <input
              disabled
              id="username"
              class="border-1 rounded-r px-4 py-2 w-full"
              type="text"
              value="<%= user.createdAt %>"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%}%> <%- include("../partials/footer") %>
