<style>
  body,
  #slider,
  .wrap,
  .slide-content {
    margin: 0;
    padding: 0;
    font-family: Arial, Helvetica, sans-serif;
    width: 100%;
    height: 75vh;
    overflow-x: hidden;
  }

  .wrap {
    position: relative;
  }

  .slide {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .slide1 {
    background-image: url("../images/chat-with-expert.jpg");
  }
  .slide2 {
    background-image: url("../images/medicine.jpg");
  }
  .slide3 {
    background-image: url("../images/home-delivery.png");
  }

  .slide-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .slide-content span {
    font-size: 2rem;
    color: rgb(56, 56, 56);
    padding-top: 400px;
  }

  .arrow {
    cursor: pointer;
    position: absolute;
    top: 50%;
    margin-top: -35px;
    width: 0;
    height: 0;
    border-style: solid;
  }

  #arrow-left {
    border-width: 30px 40px 30px 0;
    border-color: transparent rgb(88, 88, 88) transparent transparent;
    left: 0;
    margin-left: 30px;
  }

  #arrow-right {
    border-width: 30px 0 30px 40px;
    border-color: transparent transparent transparent rgb(88, 88, 88);
    right: 0;
    margin-right: 30px;
  }
</style>

